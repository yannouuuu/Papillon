{
  "expo": {
    "name": "Papillon",
    "slug": "papillonvex",
    "scheme": "papillon",
    "version": "7.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "primaryColor": "#32AB8E",
    "splash": {
      "image": "./assets/launch/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#32AB8E"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "appStoreUrl": "https://apps.apple.com/us/app/papillon-lappli-scolaire/id6477761165",
      "bundleIdentifier": "xyz.getpapillon.ios",
      "associatedDomains": ["applinks:getpapillon.xyz"],
      "splash": {
        "backgroundColor": "#32AB8E",
        "image": "./assets/launch/splash.png",
        "resizeMode": "cover",
        "dark": {
          "backgroundColor": "#001C0F",
          "image": "./assets/launch/splash-dark.png",
          "resizeMode": "cover"
        }
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "playStoreUrl": "https://play.google.com/store/apps/details?id=xyz.getpapillon.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/launch/adaptive-icon-foreground.png",
        "backgroundImage": "./assets/launch/adaptive-icon-background.png",
        "monochromeImage": "./assets/launch/adaptive-icon-monochrome.png",
        "backgroundColor": "#32AB8E"
      },
      "splash": {
        "backgroundColor": "#FFFFFF",
        "image": "./assets/launch/splash-transparent.png",
        "resizeMode": "cover",
        "dark": {
          "backgroundColor": "#001C0F",
          "image": "./assets/launch/splash-transparent.png",
          "resizeMode": "cover"
        }
      },
      "package": "xyz.getpapillon.app",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE"
      ]
    },
    "plugins": [
      "expo-font",
      "expo-barcode-scanner",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Autoriser $(PRODUCT_NAME) à utiliser votre localisation.",
          "locationWhenInUsePermission": "Autoriser $(PRODUCT_NAME) à utiliser votre localisation.",
          "locationAlwaysPermission": "Autoriser $(PRODUCT_NAME) à utiliser votre localisation.",
          "cameraPermission": "Autoriser $(PRODUCT_NAME) à utiliser votre caméra."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Autoriser $(PRODUCT_NAME) à utiliser votre caméra.",
          "microphonePermission": "Autoriser $(PRODUCT_NAME) à utiliser votre microphone.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Autoriser $(PRODUCT_NAME) à utiliser les capteurs de mouvement de votre appareil."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Papillon utilise tes photos pour ton profil, ta gestion des cours et bien plus."
        }
      ]
    ]
  }
}
